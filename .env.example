# Database Configuration
DATABASE_URL=postgresql://remote_user:remote_password@localhost:5432/remote_jobs
POSTGRES_DB=remote_jobs
POSTGRES_USER=remote_user
POSTGRES_PASSWORD=remote_password

# AI API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Scraping Configuration
SCRAPER_DELAY=2
MAX_JOBS_PER_UPDATE=1000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Job Sources
LINKEDIN_SCRAPE_ENABLED=true
INDEED_SCRAPE_ENABLED=true
REMOTE_CO_SCRAPE_ENABLED=true
WEWORKREMOTELY_SCRAPE_ENABLED=true
STACKOVERFLOW_SCRAPE_ENABLED=true

# Salary Filtering
MIN_USD_SALARY=50000
MAX_USD_SALARY=500000
CURRENCY_FILTERS=USD,US$,$,dollars

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
